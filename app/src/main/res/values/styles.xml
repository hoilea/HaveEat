<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">#626262</item>
        <item name="android:includeFontPadding">false</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textSize">17.5sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textSize">17.5sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeColor">@color/edit_text_outline</item>
        <item name="android:textColorHint">#aaa</item>
    </style>

    <style name="DropdownLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeColor">@color/edit_text_outline</item>
        <item name="android:textColorHint">#aaa</item>
    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">40dp</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_option_menu</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="IntakeValueText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="LabelingText">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
