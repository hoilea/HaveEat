<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/default_layout_padding">

            <include
                android:id="@+id/view_passwordFindResult_title"
                layout="@layout/view_title" />

            <TextView
                android:id="@+id/view_passwordFindResult_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                android:text="@string/password_find_result"
                android:textSize="18sp"
                android:paddingStart="@dimen/default_layout_padding"
                android:paddingEnd="@dimen/default_layout_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_passwordFindResult_title" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/view_passwordFindResult_button"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="6dp"
                android:text="@string/password_find_result_done"
                android:layout_marginStart="@dimen/default_layout_padding"
                android:layout_marginEnd="@dimen/default_layout_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>