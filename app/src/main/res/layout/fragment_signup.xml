<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="kr.snclab.haveeat.ui.signin.SigninViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_title" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/default_layout_padding">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_step_1_num"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3.5dp"
                android:background="@drawable/shape_step_number"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/step_num" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_step_1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/signup_terms_title"
                android:textColor="@color/step_text" />

            <View
                android:id="@+id/view_step_2_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/shape_step_line" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_step_2_num"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3.5dp"
                android:background="@drawable/shape_step_number"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/step_num" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_step_2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/signup_info_title"
                android:textColor="@color/step_text" />

            <View
                android:id="@+id/view_step_3_line"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/shape_step_line" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_step_3_num"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="3.5dp"
                android:background="@drawable/shape_step_number"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/step_num" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_step_3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/signup_check_title"
                android:textColor="@color/step_text" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_signup_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>