<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_foodIngredients_historyLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/foodInfoDetailIngredients_height">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/view_foodIngredients_icon"
                android:layout_width="4dp"
                android:layout_height="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9.5dp"
                android:scaleType="center"
                app:srcCompat="@drawable/shape_history_day_dot"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_foodIngredients_historyName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view_foodIngredients_icon"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                tools:text="된장찌개" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>