<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/view_bottomSheetTime_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/default_layout_padding"
        android:background="@drawable/bg_dialog">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_layout_padding"
            android:background="@drawable/bg_dialog_time_top"/>

        <TimePicker
            android:id="@+id/view_bottomSheetTime_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/view_bottomSheetTime_button"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="@string/close"
            style="@style/Button"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>